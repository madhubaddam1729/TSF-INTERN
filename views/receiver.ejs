<%- include('partials/header') %>
<h2>Select the customer to receive money</h2>
<br>
<br>

<div class="container-fluid">

    <div class="row">
            
        <div class="col-lg-8 col-md-8">

<table id="table" class="center"  style="width: 80%;">
    <tr>
        <th colspan="2">
            Name
        </th>
        <th colspan="2">
            Email
        </th>
        <th colspan="2">
            Balance
        </th>
    </tr>
    <% for(var i=0;i<10;i++){ %>
    <tr>
        <td colspan="2">
            <%= users[i].Name %>
        </td>
        <td colspan="2">
            <%= users[i].Email %>
        </td>
        <td colspan="2">
            <%= users[i].Balance %>
        </td>
    </tr>
    <% } %>
</table>
<br>

</div>

<div class="col-lg-4 col-md-4">
<form action="/toCustomer" method="post">

    <h2>Selected Customer</h2>
    Name:<input type="text" name="button1" id="button1" required><br><br>
    Mail:<input type="email" name="mail" id="mail" required><br><br>
    <button type="submit" class="btn btn-dark">Transfer Money</button>
</form>
</div>


<script>
    var table = document.getElementById('table');

    for (var i = 0; i < table.rows.length; i++) {
        table.rows[i].onclick = function () {
            //rIndex = this.rowIndex;
            document.getElementById("button1").value = this.cells[0].innerHTML;
            document.getElementById("mail").value = this.cells[1].innerHTML;

        };
    }
</script>


<%- include('partials/footer') %>